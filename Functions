def encode_to_morse(text):
    global MorseCode
    s = ''
    for i in text:
        if not(i in MorseCode.keys()):
            return False
        s += MorseCode[i]
    return s


def main():
    fl = input('Введите 1, если вы хотите закодировать текст, 0 - если раскодировать')
    text = input('Введите текст\n')
    if fl:
        ans = encode_to_morse(text)
    else:
        ans = decode_from_morse(text)
    if ans:
        print(text)
    else:
        print('Вы ввели символ, не предусмотренный азбукой Морзе')
